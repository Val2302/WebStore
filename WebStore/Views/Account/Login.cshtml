@using WebStore.Domain.Models.Account
@model LoginViewModel

@{
    ViewData["Title"] = "Authentication";
    Layout = "_Layout";
}

<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form">
                <!--login form-->
                <h2>Account</h2>
                <form method="post" asp-antiforgery="true" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="ReturnUrl" type="hidden" />

                    <input asp-for="EmailOrUserName" placeholder="@Html.DisplayNameFor(m => m.EmailOrUserName)" />
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>

                    <input asp-for="Password" placeholder="@Html.DisplayNameFor(m => m.Password)" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <span>
                        <input asp-for="RememberMe" class="checkbox">
                        <i>@Html.DisplayNameFor(m => m.RememberMe)</i>
                    </span>
                    <button type="submit" class="btn btn-default">Login</button>
                </form>
            </div><!--/login form-->
        </div>
    </div>
</section><!--/form-->