@model Dictionary<ProductViewModel, int>

<div class="table-responsive cart_info">
    <table class="table table-condensed">
        <thead>
            <tr class="cart_menu">
                <td class="image">Product</td>
                <td class="description">Description</td>
                <td class="price">Cost</td>
                <td class="quantity">Count</td>
                <td class="total">Price</td>
                <td></td>
            </tr>
        </thead>
        <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="cart_product">
                    <a href=""><img src="~/images/shop/@item.Key.ImageUrl" alt=""></a>
                </td>
                <td class="cart_description">
                    <h4>
                        <a asp-controller="Catalog"
                           asp-action="ProductDetails"
                           asp-route-id="@item.Key.Id">@item.Key.Name</a>
                    </h4>
                    <p>Web ID: 1089772</p>
                </td>
                <td class="cart_price" data-price="@(item.Key.Price)">
                    <p>@item.Key.Price.ToString("C")</p>
                </td>
                <td class="cart_quantity">
                    <div class="cart_quantity_button">
                        <a href="#"
                           data-id="@item.Key.Id"
                           class="btn btn-default cart_quantity_up">
                            <i class="fa fa-plus"></i>
                        </a>
                        <input class="cart_quantity_input"
                               type="text"
                               name="quantity"
                               value="@item.Value"
                               autocomplete="off"
                               size="2">
                        <a href="#"
                           data-id="@item.Key.Id"
                           class="cart_quantity_down"><i class="fa fa-minus"></i></a>
                    </div>
                </td>
                <td class="cart_total">
                    <p class="cart_total_price"
                       data-price="@(item.Value * item.Key.Price)">
                        @((item.Value * item.Key.Price).ToString("C"))
                    </p>
                </td>
                <td class="cart_delete">
                    <a href="#"
                       data-id="@item.Key.Id"
                       class="cart_quantity_delete"><i class="fa fa-times"></i></a
                    >
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>