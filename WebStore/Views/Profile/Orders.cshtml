@model IEnumerable<WebStore.Domain.Models.Order.UserOrderViewModel>

@{
    ViewBag.Title = "My orders";
    Layout = "_ProfileLayout";
}

<h2>@ViewBag.Title</h2>

<table class="table table-bordered">
    <tr>
        <th>
            №
        </th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th>
            Price
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.TotalSum.ToString("C")</td>
        </tr>
    }
</table>
